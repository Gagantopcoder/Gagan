<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acadview.tarana.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/wallmusic" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:layout_toLeftOf="@+id/searchView"
        android:layout_toStartOf="@+id/searchView" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/oval"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@+id/pause"
        android:layout_toStartOf="@+id/pause"
        android:src="@drawable/play" />

    <ImageButton
        android:id="@+id/pause"
        android:layout_width="46dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/play"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:layout_toLeftOf="@+id/forw"
        android:layout_toStartOf="@+id/forw"
        android:background="@drawable/oval"
        android:src="@drawable/pause" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignEnd="@+id/time"
        android:layout_alignRight="@+id/time"
        android:layout_alignTop="@+id/play"
        android:background="@drawable/oval"
        android:src="@drawable/back" />

    <ImageButton
        android:id="@+id/forw"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/oval"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/play"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:src="@drawable/forw" />

    <TextView
        android:id="@+id/time"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_above="@+id/seekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="time" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/forw"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/forw"
        android:text="GAGAN" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/forw"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/forw"
        android:layout_marginTop="28dp"
        android:background="@android:color/background_light" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/time"
        android:layout_alignStart="@+id/time"
        android:layout_alignTop="@+id/searchView"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add" />




</RelativeLayout>
