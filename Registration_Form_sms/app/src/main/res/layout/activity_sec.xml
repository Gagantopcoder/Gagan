<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regbg"
    tools:context="com.acadview.registration_form.Sec">

    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Second Screen"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/uservalue"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/a"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/phonevalue"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/uservalue"
        android:layout_alignStart="@+id/uservalue"
        android:layout_below="@+id/uservalue"
        android:layout_marginTop="27dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_orange_light"
        android:visibility="visible" />

    <TextView
        android:id="@+id/emailvalue"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/phonevalue"
        android:layout_alignStart="@+id/phonevalue"
        android:layout_below="@+id/phonevalue"
        android:layout_marginTop="26dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="14sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/cityvalue"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/emailvalue"
        android:layout_alignStart="@+id/emailvalue"
        android:layout_below="@+id/emailvalue"
        android:layout_marginTop="21dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="14sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cityvalue"
        android:layout_alignStart="@+id/cityvalue"
        android:layout_below="@+id/cityvalue"
        android:layout_marginTop="24dp"
        android:text="Edit" />

    <Button
        android:id="@+id/Finish"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_toEndOf="@+id/cityvalue"
        android:layout_toRightOf="@+id/cityvalue"
        android:text="Finish." />
</RelativeLayout>
